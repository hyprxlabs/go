
tasks:
  cmdargs:test:
    cwd: "./cmdargs"
    run: go test -v

  cmdargs:build:
    cwd: "./cmdargs"
    run: go build -v ./...

  cmdargs:tidy:
    cwd: "./cmdargs"
    run: go mod tidy

  cmdargs: 
    needs: [cmdargs:tidy, cmdargs:build, cmdargs:test]
    run: |
      echo "done"

  version:
    run: echo deno run -A .eng/publish.ts 

  crypto:install:
    cmd: "./crypto"
    run: mise install

  crypto:test:
    cwd: "./crypto"
    run: go test -v

  crypto:build:
    cwd: "./crypto"
    run: go build -v ./...

  crypto:tidy:
    cwd: "./crypto"
    run: go mod tidy

  crypto: 
    needs: [crypto:tidy, crypto:build, crypto:test]
    run: |
      echo "done"